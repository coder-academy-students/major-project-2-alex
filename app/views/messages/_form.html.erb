<div class="profile">
  <%= simple_form_for(@message) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :receiver_id, as: :hidden, input_html: { value: params[:receiver] } %>
      <%= f.input :subject, input_html: { class: "profile-inputs"} %>
      <%= f.input :message, input_html: { class: "profile-inputs"} %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: 'message' %>
    </div>
  <% end %>
</div>
