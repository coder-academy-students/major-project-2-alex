    <div class="free-plan">
      <h2>Free Plan</h2>
      <ul>
        <li>STUDENTS</li>
        <li>Free listing</li>
        <li>Unlimited messaging</li>
        <li>Unlimited tutors</li>
        <li>Unlimited homework tasks</li>
      </ul>
        <label class="amount">
          <h3>Amount: FREE</h3>
        </label>
        <div class="plan-stripe">
          <script src="https://checkout.stripe.com/checkout.js"></script>
          <button id="customButton" class="stripe-button-el">
          <span style="display: block; min-height: 30px;"><%= link_to 'Student signup', new_user_registration_path %></span>
          </button>
        </div>
    </div>
    <div class="basic-plan">
