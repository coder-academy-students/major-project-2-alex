<header style="height: 100vh;">
  <div class="user">
    <div class="user-signup">
      <h2>Sign up</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
          <%= f.input :email, required: true, autofocus: true, input_html: {value: params[:email]} %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
          <% if params[:role] == 'tutor' %>
          <%= submit_tag "tutor", class: 'user-button'  %>
          <% else %>
          <%= submit_tag "student", class: 'user-button'  %>
          <% end %>
      <% end %>
      <span>Already have an account? <%= render "users/shared/links" %></span>
    </div>
  </div>
</header>
