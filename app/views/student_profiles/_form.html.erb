<div class="profile">
    <%= simple_form_for(@student_profile) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, input_html: { class: "profile-inputs"} %>
        <%= f.input :last_name, input_html: { class: "profile-inputs"} %>
        <%= f.input :profile_image, input_html: { class: "profile-inputs"} %>
        <%= f.input :street_number, input_html: { class: "profile-inputs"} %>
        <%= f.input :street_address, input_html: { class: "profile-inputs"} %>
        <%= f.input :suburb, input_html: { class: "profile-inputs"} %>
        <%= f.input :state, input_html: { class: "profile-inputs"} %>
        <%= f.input :postcode, input_html: { class: "profile-inputs"} %>
        <%= f.label :dob, "Date of birth" %>
        <%= f.date_field :dob %>
        <%= f.input :categories, input_html: { class: "profile-inputs"} %>
        <%= f.input :bio, input_html: { class: "profile-inputs"} %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class: "message" %>
      </div>
    <% end %>
</div>
